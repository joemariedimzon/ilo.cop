<div class="portlet" tal:define="ptype context/portal_type" tal:condition="python: ptype=='ilo.cop.cop'">
    <span class="portletHeader" tal:content="view/data/portlet_header_title"></span><br/>
    <div tal:define="contents view/contents" tal:condition="contents">
        <tal:entry tal:repeat="content contents">
            <p tal:define="url content/getURL; fname python: content._unrestrictedGetObject().discussion_brief.filename">
                <a tal:attributes="href string: ${url}/view/++widget++form.widgets.discussion_brief/@@download/${fname}" tal:content="fname"></a>
            </p>
        </tal:entry>
    </div>
    
</div>